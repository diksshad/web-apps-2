<h1>New Post</h1>

<%= form_with :model => @post do |form| %>
  <p>
    <%= form.label "Author Name" %>
    <%= form.text_field "author" %>
    <%= form.label "Body" %>
    <%= form.text_field "body" %>
    <%= form.label "image" %>
    <%= form.text_field "image" %>
  </p>
  <%= form.submit %>
<% end %>

